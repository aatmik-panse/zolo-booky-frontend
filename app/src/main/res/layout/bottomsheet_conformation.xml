<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/bottomsheet_conformation_scene"
    android:background="@drawable/custom_dialog_bg"
    android:orientation="vertical"

    >
    <TextView
        android:id="@+id/tvTitleDialogBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Confirm borrow date"
        android:textColor="@color/onlyBlack"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:paddingTop="20dp"
        />

    <LinearLayout
        android:id="@+id/linearLayoutInnerContentBottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tvBorrowDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Borrow date"
            android:textAlignment="center"
            android:textColor="@color/onlyBlack"
            android:textSize="15dp"
            android:maxLines="6"
            android:lines="2"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:backgroundTint="@color/zolo_btn_dark"
            app:cornerRadius="5dp"
            android:text="Cancel"
            android:textColor="@color/netflixred"
            app:strokeColor="@color/onlyBlack"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:cornerRadius="5dp"
            android:backgroundTint="@color/zolo_btn_dark"
            android:text="Confirm"
            android:textColor="@color/zolo_bluey"
            app:strokeColor="@color/onlyBlack"

            />

    </LinearLayout>

</LinearLayout>